<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Cd title</th>
      <th>Artist</th>
      <th>Picture</th>
      <th>Sound source</th>
      <th>Price</th>
      <th>Label</th>
      <th>Genre</th>
      <th>Stock</th>
      <th>Start date</th>
      <th>Product flg</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.cd_title %></td>
        <td><%= product.artist %></td>
        <td><%= product.picture_id %></td>
        <td><%= product.sound_source %></td>
        <td><%= product.price %></td>
        <td><%= product.label %></td>
        <td><%= product.genre %></td>
        <td><%= product.stock %></td>
        <td><%= product.start_date %></td>
        <td><%= product.product_flg %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'カートに追加', product_cart_items_path(product_id:product.id), method: :post %></td>
        <td><%= product.id %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

